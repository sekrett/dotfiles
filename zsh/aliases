# cd
alias ..='cd ..'

# ls
alias ls="ls -FG"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

alias rsync='rsync --partial --progress'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias ga='git add'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'

# rails
alias sun='script/unicorn'
alias a='autotest -rails'
if [ "$RAILS_ENV" = 'production' ]; then
  alias tlog='tail -f log/production.log'
else
  alias tlog='tail -f log/development.log'
fi
alias migrate='bundle exec rake db:migrate'
alias rst='touch tmp/restart.txt'
alias rake='bundle exec rake'

# rails 3.0
alias rn='rails new'
alias rs='rails server'
alias rg='rails generate'
alias rgs='rails generate nifty:scaffold'
alias rc='rails console'
alias rp='rails plugin'
alias rpi='rails plugin install'

# rails 4.0
alias bun='bin/unicorn'

# bundler primary commands
if [ "$RAILS_ENV" = 'production' ]; then
  alias bi='bundle install --without development test'
else
  alias bi='bundle install'
fi
alias bu='bundle update'
alias bp='bundle package'
alias be='bundle exec'
alias bconf='bundle config'

# bundler utilities
alias bc='bundle check'
alias bl='bundle list'
alias bs='bundle show'
alias bcon='bundle console'
alias bo='bundle open'
alias bv='bundle viz'
alias binit='bundle init'
alias bg='bundle gem'

# commands starting with % for pasting from web
alias %=' '
